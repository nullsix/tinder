- provide :title, "Draft #{@draft.number}"

- piece_bar = ""
- if owner_is_logged_in?(@draft.piece.user)
  - piece_bar = render partial: "pieces/piece_bar", locals: { current_page: :history, piece: @piece, version: @draft }

= piece_bar

.row
  .span12
    = render partial: 'versions/version', locals: { version: @draft.version }

= piece_bar
