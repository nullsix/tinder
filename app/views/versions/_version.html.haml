- is_owner = owner_is_logged_in?(version.piece.user)
- unless is_owner
  = link_to "piece history", history_piece_path(id: version.piece.id)

%h2= version.title

- unless is_owner
  %h4.author.muted by #{version.piece.user.name}
#content= simple_format version.content
%p.created-time.small.muted created #{time_ago_in_words(version.created_at)} ago
